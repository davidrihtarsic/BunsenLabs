# e1
# Upgrade linux packages
execp = new
execp_command = updates=$(checkupdates | wc -l); printf "|î©’$updates"
execp_lclick_command = terminator --command=pacli & disown
execp_font = Ubuntu 10
execp_tooltip = Run Package updater...
execp_font_color = #ffffff 100
execp_background_id = 6
execp_interval = 3600
execp_continuous = 0

#-------------------------------------
# Dropbox
execp = new
execp_command = drop_sync=$(dropbox-cli filestatus /home/mija/Dropbox); if [[ "$drop_sync" = *"up to date"* ]]; then printf "| [âœ”] ";elif [[ "$drop_sync" = *"syncing"* ]]; then printf "| [â™»] ";else printf "| [âœ˜] ";fi
execp_lclick_command = dropbox_status=$(dropbox-cli status);notify-send "Dropbox: $dropbox_status"
execp_font = Ubuntu 10
execp_tooltip = Dropbox
execp_font_color = #ffffff 100
execp_background_id = 6
execp_interval = 3
execp_continuous = 0

#-------------------------------------
# e2
# CPU
# â– â–‚ â–ƒ â–„ â–… â–† â–‡
execp = new
execp_command = temp=$(sensors | awk '/Core 0:/ { print $3 }');temp=${temp:1:-2};usage=$(top -bn 2 -d 0.01 | grep '^%Cpu' | tail -n 1 | gawk '{print $2+$4+$6}');printf  "|î¨Ÿ%.0f%% |ï‹‰%.0fÂ°C" $usage $temp
execp_font = Ubuntu 10
execp_tooltip = Run HTOP...
execp_lclick_command = terminator --command=htop & disown
execp_font_color = #ffffff 100
execp_background_id = 6
execp_interval = 5
execp_continuous = 0

#-------------------------------------
# e3
# Memory RAM free
execp = new
execp_command = free_ram=$(free |awk '/Mem:/ {print $3/$2*100}');printf "|ï‹›%.0f%%" $free_ram
execp_font = Ubuntu 10
execp_tooltip = Run HTOP...
execp_lclick_command = terminator --command=htop & disown
execp_font_color = #ffffff 100
execp_background_id = 6
execp_interval = 5
execp_continuous = 0

#-------------------------------------
# e4
# Sound
execp = new
execp_command = vol=$(pamixer --get-volume);mute=$(pamixer --get-mute);if [ "$mute" = "true" ]; then printf "|î®‰muted"; else printf "|î®Š%.0f%%" $vol; fi
execp_font = Ubuntu 10
execp_tooltip = L click = mute \nR click = Volume setup... 
execp_lclick_command = pamixer -t
execp_rclick_command = pavucontrol &
execp_uwheel_command = pamixer -i 1
execp_dwheel_command = pamixer -d 1
execp_font_color = #ffffff 100
execp_background_id = 6
execp_interval = None
execp_continuous = 0

